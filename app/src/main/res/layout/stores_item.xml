<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stores_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_margin="@dimen/_12sdp"
    android:outlineSpotShadowColor="@color/tileColor"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="@dimen/_2sdp"
    tools:targetApi="p">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--        <TextView-->
        <!--            android:id="@+id/stores_tv_storeLocation"-->
        <!--            style="@style/text"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintHorizontal_bias="0.0"-->
        <!--            app:layout_constraintStart_toStartOf="@+id/stores_tv_storeName"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/stores_tv_storeName"-->
        <!--            tools:text="@tools:sample/full_names" />-->


        <TextView
            android:id="@+id/stores_tv_storeName"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:maxLines="1"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Phone"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="@+id/stores_tv_storeName"
            app:layout_constraintTop_toBottomOf="@+id/stores_tv_storeName" />


        <TextView
            android:id="@+id/stores_tv_storePhone"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:text="@tools:sample/us_phones" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Shop Name"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stores_tv_date"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            app:layout_constraintEnd_toEndOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:text="@tools:sample/date/mmddyy" />

        <ImageView
            android:id="@+id/stores_img_reset"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_date_test"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stores_tv_storePhone" />

        <ImageView
            android:id="@+id/location_button"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="96dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_location_test"
            app:layout_constraintBottom_toBottomOf="@+id/stores_img_reset"
            app:layout_constraintEnd_toStartOf="@+id/stores_img_call"
            app:layout_constraintHorizontal_bias="0.944"
            app:layout_constraintStart_toEndOf="@+id/stores_img_reset"
            app:layout_constraintTop_toTopOf="@+id/stores_img_reset"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/stores_img_call"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="32dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_outline_local_phone_24"
            app:layout_constraintBottom_toBottomOf="@+id/location_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/location_button"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="Last Visit"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
